import { ScrollView } from "std-widgets.slint";
import { UAppTheme } from "../sleek-ui/app-theme.slint";
import { UScrollView } from "../sleek-ui/widgets.slint";


export component PageBase {
    height: 100%;
    public function scroll-to(pos: length) {
        scrollview.scroll-y-to(pos);
    }
    scrollview := UScrollView {
        VerticalLayout {
            alignment: start;
            padding: UAppTheme.padding-big;
            padding-top: UAppTheme.padding-bigger;
            @children
        }
    }
}
