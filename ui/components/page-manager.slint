import { UMenuLogic } from "../sleek-ui/widgets.slint";

import {
    HomePage,
    HowToUsePage,
    ColorsPage,
    ThemingPage,
    AccessabilityPage,

	// General widgets.
    ButtonPage,
    DividerPage,
    IconButtonPage,
    FloatingButtonPage,
    FloatingIconButtonPage,
    LinkPage,
    SpinnerPage,

	// Navigation widgets.
	BreadcrumbPage,
    TabsPage,
    MenuPageHowTo,
    MenuPageLink,
    MenuPageSubmenu,
    MenuPageGroupTitle,

	// Data entry widgets
	CheckboxPage,
    InputPage,
    InputNumberPage,
    SelectPage,
    RadioPage,
    RadioButtonPage,
    SliderPage,

	// Structs
	OptionDataPage,
} from "../pages/page-index.slint";


export component PageManager {
    in property <string> current-page: UMenuLogic.current-link;
    VerticalLayout {
        alignment: start;
        if current-page == "home": HomePage { }
        if current-page == "how-to-use": HowToUsePage { }
        if current-page == "default-colors": ColorsPage { }
        if current-page == "theming": ThemingPage { }
        if current-page == "accessability": AccessabilityPage { }
		
		// General widgets
        if current-page == "button": ButtonPage { }
        if current-page == "divider": DividerPage { }
        if current-page == "icon-button": IconButtonPage { }
        if current-page == "floating-button": FloatingButtonPage { }
        if current-page == "floating-icon-button": FloatingIconButtonPage { }
        if current-page == "link": LinkPage { }
        if current-page == "spinner": SpinnerPage { }

        // Navigation widgets
		if current-page == "breadcrumb": BreadcrumbPage { }
        if current-page == "tabs": TabsPage { }
        if current-page == "menu-how-to": MenuPageHowTo { }
        if current-page == "menu-link": MenuPageLink { }
        if current-page == "menu-submenu": MenuPageSubmenu { }
        if current-page == "menu-group-title": MenuPageGroupTitle { }

        // Data entry widgets
		if current-page == "checkbox": CheckboxPage { }
        if current-page == "input": InputPage { }
        if current-page == "input-number": InputNumberPage { }
        if current-page == "select": SelectPage { }
        if current-page == "radio": RadioPage { }
        if current-page == "radio-button": RadioButtonPage { }
        if current-page == "slider": SliderPage { }

		// Structs
		if current-page == "option-data": OptionDataPage { }
    }
}
