import { UAppTheme } from "../app-theme.slint";


export component USpinner inherits Image {
    in-out property <length> size: UAppTheme.icon-size-base;
    accessible-role: image;
    accessible-label: @tr("Loading spinner.");
    colorize: UAppTheme.primary.base;
    width: size;
    height: size;
    source: @image-url("../assets/icons/loader-circle.svg");
    transform-rotation: 240deg * animation-tick() / 1s;
    animate transform-rotation {
        easing: ease-in-out;
        iteration-count: -1;
    }
}
