import { UAppTheme } from "../app-theme.slint";

export component UTitle inherits Text {
	// Accessability properties
	accessible-role: text;
    accessible-value: self.text;
	// Regular properties
	property <length> t-font-size: 36px;
    in-out property <int> level: 1;
    color: UAppTheme.text;
    font-size: t-font-size * UAppTheme.scale-factor;
    font-weight: 600;
    states [
        level-1 when level == 1: {
            t-font-size: 36px;
            font-weight: 600;
        }
        level-2 when level == 2: {
            t-font-size: 30px;
            font-weight: 500;
        }
        level-3 when level == 3: {
            t-font-size: 24px;
            font-weight: 400;
        }
        level-4 when level == 4: {
            t-font-size: 20px;
            font-weight: 400;
        }
        level-5 when level == 5: {
            t-font-size: 18px;
            font-weight: 400;
        }
        level-6 when level == 6: {
            t-font-size: 16px;
            font-weight: 400;
        }
    ]
}
