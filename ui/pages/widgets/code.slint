    DocSection {
        title: "Basic usage";
        description: [
            [{ text: "The code widget is by default of type " }, { code: "block" }, { text: "." }],
        ];
    }

    DocCode {
        code: "UCode {\n    code: \"some code...\";\n}";
    }

    DocSection {
        title: "Inline code";
        description: [
            [
                { text: "With the " },
                { code: "inline" },
                { text: " type, you can display some code next to a text." }
