import { UAppTheme } from "../../sleek-ui/app-theme.slint";
import { UTitle, UIconButton } from "../../sleek-ui/widgets.slint";

import {
    DocTitle,
    DocDescription,
    WidgetPresentation,
    DocSection,
    DocCode,
} from "../../components/doc-widgets.slint";
import { PageBase } from "../../components/page-base.slint";
import { AppLogic } from "../../app-logic.slint";


export component IconButtonPage inherits PageBase {
    UTitle {
        level: 3;
        text: "Icon Button";
    }

    DocDescription {
        text: "An icon-only button used for compact actions. It supports variants, loading, disabled and danger states.";
    }

    DocSection {
        title: "Simple icon buttons";
        description: [
            [
                {
                    text: "Icon buttons are compact and come with the same variants as regular buttons."
                }
            ]
        ];
    }

    WidgetPresentation {
        UIconButton {
            variant: primary;
            icon: @image-url("../../assets/images/plus.svg");
        }

        UIconButton {
            icon: @image-url("../../assets/images/search.svg");
        }

        UIconButton {
            variant: filled;
            icon: @image-url("../../assets/images/rocket.svg");
        }

        UIconButton {
            variant: text;
            icon: @image-url("../../assets/images/minus.svg");
        }
    }

    DocCode {
        code: "UIconButton {\n    variant: primary;\n    icon: @image-url(\"url-to-icon\");\n}";
    }

    DocSection {
        title: "Disabled icon buttons";
    }

    WidgetPresentation {
        UIconButton {
            enabled: false;
            variant: primary;
            icon: @image-url("../../assets/images/plus.svg");
        }

        UIconButton {
            enabled: false;
            icon: @image-url("../../assets/images/search.svg");
        }
    }

    DocCode {
        code: "UIconButton {\n    enabled: false;\n    icon: @image-url(\"url-to-icon\");\n}";
    }

    DocSection {
        title: "Loading";
    }

    WidgetPresentation {
        UIconButton {
            loading: true;
            variant: primary;
            icon: @image-url("../../assets/images/plus.svg");
        }

        UIconButton {
            loading: true;
            icon: @image-url("../../assets/images/search.svg");
        }
    }

    DocCode {
        code: "UIconButton {\n    loading: true;\n    icon: @image-url(\"url-to-icon\");\n}";
    }

    DocSection {
        title: "Danger";
        description: [
            [
                {
                    text: "Change the button's color to the danger color of the theme. It is compatible with other states."
                }
            ]
        ];
    }

    WidgetPresentation {
        UIconButton {
            danger: true;
            variant: primary;
            icon: @image-url("../../assets/images/search.svg");
        }
    }

    DocCode {
        code: "UIconButton {\n    danger: true;\n    icon: @image-url(\"url-to-icon\");\n}";
    }

    DocSection {
        title: "Checked";
        description: [
            [
                {
                    text: "A state in which the button keeps a different look even on hover and active events."
                }
            ]
        ];
    }

    WidgetPresentation {
        UIconButton {
            checked: true;
            icon: @image-url("../../assets/images/plus.svg");
            clicked => {
                self.checked = !self.checked;
            }
        }
    }

    DocCode {
        code: "UIconButton {\n    checked: true;\n    icon: @image-url(\"url-to-icon\");\n}";
    }

    DocSection {
        title: "Colored icons";
    }

    WidgetPresentation {
        UIconButton {
            icon: @image-url("../../assets/images/rocket.svg");
            colorize-icon: false;
        }
    }

    DocCode {
        code: "UIconButton {\n    icon: @image-url(\"url-to-icon\");\n    colorize-icon: false;\n}";
    }
}
