import { UAppTheme } from "../../sleek-ui/app-theme.slint";
import {
    UTitle,
    UText,
    ULink,
    UMenuLogic,
} from "../../sleek-ui/widgets.slint";

import {
    DocTitle,
    DocDescription,
    WidgetPresentation,
    DocSection,
    DocCode,
} from "../../components/doc-widgets.slint";
import { PageBase } from "../../components/page-base.slint";
import { DocumentationLogic } from "../../logic/documentation-logic.slint";


export component LinkPage inherits PageBase {
    UTitle {
        level: 3;
        text: "Link";
    }

    DocDescription {
        text: "A simple text displayed as a link. The logic must be implemented by your source code as opening URLs is not (yet) supported by Slint.";
    }

    DocSection {
        title: "Example";
        description: [
            [
                { text: "The link widget comes with a " },
                { code: "clicked" },
                { text: " callback." },
            ]
        ];
        link-clicked(id) => {
            UMenuLogic.current-link = "button-interface";
        }
    }

    WidgetPresentation {
        ULink {
            text: "Slint source";
            clicked => {
                DocumentationLogic.open-url("https://github.com/slint-ui/slint");
            }
        }
    }

    DocCode {
        code: "ULink {\n    text: \"Source\";\n    clicked => {\n        // Your logic to open URLs.\n    }\n}";
    }

    DocSection {
        title: "Word wrapping";
        description: [
            [
                { text: "A " },
                { code: "wrap" },
                {
                    text: " property is available in the link, allowing you to define how to wrap the text. It uses the "
                },
                { code: "TextWrap" },
                { text: " enum and defaults to " },
                { code: "no-wrap" },
                { text: "." },
            ]
        ];
    }

    DocCode {
        code: "ULink {\n    text: \"Source\";\n    wrap: no-wrap;\n    clicked => {\n        // Your logic to open URLs.\n    }\n}";
    }
}
