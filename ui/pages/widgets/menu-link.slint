import { UAppTheme } from "../../sleek-ui/app-theme.slint";
import { UTitle } from "../../sleek-ui/widgets.slint";

import {
    DocTitle,
    DocDescription,
    WidgetPresentation,
    DocSection,
    DocCode,
} from "../../components/doc-widgets.slint";
import { PageBase } from "../../components/page-base.slint";
import { AppLogic } from "../../app-logic.slint";


export component MenuPageLink inherits PageBase {
    UTitle {
        level: 3;
        text: "Menu link";
    }

    DocDescription {
        text: "A link to use in the menu or submenu widget.";
    }

    DocSection {
        title: "Basic usage";
        description: [
            [
                { text: "Add a link to a menu by setting the " },
                { code: "id" },
                { text: " and " },
                { code: "name" },
                { text: "." },
            ]
        ];
    }

    DocCode {
        code: "UMenuLink {\n    id: \"first-page\";\n    name: \"First page\";\n}";
    }

    DocSection {
        title: "Disabled link";
        description: [
            [
                { text: "You can disable a link by setting the " },
                { code: "enabled" },
                { text:" property to false." }
            ]
        ];
    }

    DocCode {
        code: "UMenuLink {\n    enabled: false;\n}";
    }

    DocSection {
        title: "Selected link";
        description: [
            [
                {
                    text: "You can check a link is selected either by checking the current value of "
                },
                { code: "UMenuLogic.current-link" },
                { text:" or by checking the " },
                { code:"is-selected" },
                { text: " property." }
            ]
        ];
    }

    DocCode {
        code: "UMenuLink {\n    activated => {\n        debug(self.is-selected);\n    }\n}";
    }

    DocSection {
        title: "Activated callback";
        description: [
            [
                { text:"Clicking on the link will fire the " },
                { code:"activated" },
                { text: " callback (only if the link is not the current link)." }
            ]
        ];
    }

