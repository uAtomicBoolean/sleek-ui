import { UAppTheme } from "../sleek-ui/app-theme.slint";
import {
    UTitle,
    UText,
    UButton,
    USlider,
    ULinearProgress,
    UInput,
    UInputNumber,
    ULink,
    UAlert,
    USwitch,
    UCheckbox,
    UTag,
} from "../sleek-ui/widgets.slint";
import { UMenuLogic } from "../sleek-ui/widgets.slint";

import { PageBase } from "../components/page-base.slint";
import { AppLogic } from "../app-logic.slint";


export component HomePage inherits PageBase {
    private property <bool> is-wasm: AppLogic.is-wasm();
    HorizontalLayout {
        alignment: center;
        padding-top: 64px;
        padding-bottom: 24px;
        UTitle {
            level: 1;
            text: "Sleek-ui";
        }
    }

    if is-wasm: HorizontalLayout {
        alignment: center;
        padding-top: UAppTheme.padding-bigger;
        padding-bottom: UAppTheme.padding-bigger;
        UAlert {
            variant: warning;
            message: "Please note that the text and border-radius rendering might be flawed in WASM due to femtovg.";
        }
    }
    HorizontalLayout {
        alignment: center;
        UText {
            text: "A widgets library built with/for Slint and based on Ant Design.";
        }
    }

    HorizontalLayout {
        alignment: center;
        UText {
            text: "Comes with a simple application wide theming system.";
        }
    }

    HorizontalLayout {
        alignment: center;
        spacing: UAppTheme.spacing-base;
        padding-top: 100px;
        UButton {
            variant: primary;
            text: "Primary";
        }

        UButton {
            variant: default;
            text: "Default";
        }

        UButton {
            variant: filled;
            text: "Filled";
        }

        UButton {
            variant: text;
            text: "Text";
        }

        UButton {
            variant: primary;
            danger: true;
            text: "Danger";
        }

        UButton {
            variant: primary;
            loading: true;
            text: "Loading";
        }
    }

    HorizontalLayout {
        alignment: center;
        spacing: UAppTheme.spacing-base;
        padding-top: UAppTheme.padding-bigger;
        UTag {
            text: "Primary";
        }

        UTag {
            variant: success;
            text: "Success";
        }

        UTag {
            variant: warning;
            text: "Warning";
        }

        UTag {
            variant: danger;
            text: "Danger";
        }
    }

    HorizontalLayout {
        alignment: center;
        spacing: UAppTheme.spacing-bigger;
        padding-top: UAppTheme.padding-bigger;
        USwitch { }

        UCheckbox {
            text: "Checkbox";
            text-placement: start;
        }
    }

    HorizontalLayout {
        alignment: center;
        padding-top: UAppTheme.padding-bigger;
        ULinearProgress {
            width: 300px;
            progress: 30%;
            indeterminate: true;
        }
    }

    HorizontalLayout {
        alignment: center;
        padding-top: UAppTheme.padding-bigger;
        USlider {
            width: 350px;
            value: 30;
        }
    }

    HorizontalLayout {
        alignment: center;
        spacing: UAppTheme.spacing-bigger;
        padding-top: UAppTheme.padding-bigger;
        UInput {
            width: 150px;
            placeholder: "Text input";
        }

        UInputNumber {
            width: 150px;
        }
    }

    HorizontalLayout {
        alignment: center;
        padding-top: UAppTheme.padding-bigger;
        UAlert {
            variant: info;
            message: "Simple alert to display a message to the user.";
        }
    }

    HorizontalLayout {
        alignment: center;
        padding-top: UAppTheme.padding-bigger;
        ULink {
            text: "How to use";
            clicked => {
                UMenuLogic.current-link = "how-to-use";
            }
        }
    }
}
